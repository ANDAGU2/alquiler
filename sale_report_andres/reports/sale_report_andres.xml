<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <report
                id="report_custom_sale_andres"
                string="orden de venta / andres"
                model="sale.order"
                report_type="qweb-pdf"
                name="sale_report_andres.report_custom_sale_andres"
        />

        <record id="paperformat_report_custom_sale_andres" model="report.paperformat">
          <field name="name">Formato de papel Orden de venta andres</field>
          <field name="default" eval="True"/>
          <field name="format">A4</field>
          <field name="page_height">0</field>
          <field name="page_width">0</field>
          <field name="orientation">Portrait</field>
          <field name="margin_top">45</field>
          <field name="margin_bottom">15</field>
          <field name="margin_left">7</field>
          <field name="margin_right">7</field>
          <field name="header_line" eval="False"/>
          <field name="header_spacing">49</field>
          <field name="dpi">90</field>
        </record>

        <template id="report_custom_sale_andres">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                     <div class="header">
                      este es el encabezado de andres gutierrez
                     </div>
                     <div class="article o_report_layout_standard">
                       <div class="page">

                       <table class="table">
                          <thead>
                            <tr>
                              <th scope="col">#</th>
                              <th scope="col">nombre</th>
                              <th scope="col">apellido</th>
                              <th scope="col">cargo</th>
                              <th scope="col">salario</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <th scope="row">1</th>
                              <td>Luis</td>
                              <td>felipe</td>
                              <td>desarrollador</td>
                              <td>1200</td>
                              </tr>
                            <tr>
                              <th scope="row">2</th>
                              <td>Julian</td>
                              <td>arguello</td>
                              <td>funcional</td>
                              <td>1200</td>
                              </tr>
                            <tr>
                              <th scope="row">3</th>
                              <td>Sergio</td>
                              <td>gutierrez</td>
                              <td>funcional</td>
                              <td>1200</td>
                              </tr>
                            </tbody>
                        </table>

                       </div>
                     </div>
                     <div class="footer">
                       este el pie de pagina
                     </div>
                </t>
            </t>
        </template>

      </data>
</odoo>